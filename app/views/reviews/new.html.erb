<!-- views/reviews/new.html.erb -->
<div class= 'container'>
  <div class ='col-md-6'>
    <h1><%=@movie.title%></h1>
    <%= image_tag @movie.poster%>
    <%= form_for @review , url: create_review_path do |f| %>
      <h4>New Review:</h4>
      <hr>

      <!--user rating  -->
      <p>Rating: </p>
      <div id="user_star">
        <script>
          $('#user_star').raty({
            score: <%= @rating.score %>,
            path: '/assets',
            click: function(score, evt) {
              $.ajax({
                url: '/ratings/' + <%= @rating.id %>,
                type: 'PATCH',
                data: { score: score }
              }).done(function (data){});
            }
          });
        </script>
      </div>
      <!--end user rating  -->
      <div>
        <%= f.label :subject %>
        <%= f.text_field :subject, class:'form-control' %>
      </div><br>

      <div>
        <%= f.label :rating %>
        <%= f.number_field :rating, class:'form-control' %>
      </div><br>

      <div>
        <%= f.label :content, "Review" %>
        <%= f.text_area :content, class:'form-control' %>
      </div><br>

      <div>
        <%= f.submit :submit, class:'btn btn-primary' %>
      </div>

    <% end %>
  </div>
</div>
