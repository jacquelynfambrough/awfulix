<!-- views/reviews/edit.html.erb -->
<div class= 'container'>
  <div class ='col-md-6'>
    <h1><%=@movie.title%></h1>
    <%= image_tag @movie.poster%>
    <%= form_for @review, url: update_review_path do |f| %>
      <h4>Edit Review:</h4>
      <hr>

      <div>
        <%= f.label :subject %>
        <%= f.text_field :subject, class:'form-control' %>
      </div><br>

      <div>
        <%= f.label :rating %>
        <%= f.number_field :rating, class:'form-control' %>
      </div><br>

      <div>
        <%= f.label :content, "Review" %>
        <%= f.text_area :content, class:'form-control' %>
      </div><br>

      <div>
        <%= f.submit :submit, class:'btn btn-primary' %>
      </div>

    <% end %>
  </div>
</div>
