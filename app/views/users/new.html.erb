
<div class ="col-md-6">
<h1> Sign Up </h1>

<%= form_for @user do |f| %>

<div>
  <%= f.text_field :username, placeholder: "username", class: "form-control"%><br>
</div>

<div>
  <%= f.text_field :email, placeholder: "email", class: "form-control" %><br>
</div>

<div>
  <%= f.password_field :password, placeholder: "password", class: "form-control" %><br>
</div>

<div>
  <%= f.text_field :image, placeholder: "Image Address", class: 'form-control' %><br>
</div>

<div>
  <%= f.submit :submit, class: "btn btn-primary" %>
</div>

<% end %>
</div>
