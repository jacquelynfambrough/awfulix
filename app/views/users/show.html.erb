<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-warning">
      <div class = "panel panel-heading"> <h2> <%= @user.username %> </h2></div>
        <p><%= image_tag @user.image, class: "img-responsive center-block"%></p>
        <p><b>Email: </b><%= @user.email %></p>
        <%= button_to 'Edit Account', edit_user_path(@user), method: 'get', class: 'btn btn-warning' %>
      </div>
    </div>
  </div>
</div>
