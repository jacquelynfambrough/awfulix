
<link href='https://fonts.googleapis.com/css?family=Press+Start+2P' rel='stylesheet' type='text/css'>
<div class= "container-fluid">
  <div class= "row">
    <div class= "col-md-12">
      <div class = "bg">
        <div class= "container">
          <div class="jumbotron jumbotron-fluid">
            <h2 class="display-3">Movies <br> Index</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class= "container">
  <div class = "row">
    <form class="form-inline search-bar">
        <%= form_tag movies_path, {method: 'get'} do %>
        <%= text_field_tag :search, params[:search], class:'form-control', placeholder:"Search movies"%>
        <%= submit_tag "Search", name: nil, class: "btn btn-secondary-outline" %>
      <% end %>
    </form>
  </div>
</div>
<div class= "container-fluid results">
  <div class="panel panel-default">
    <div class="panel-body">
        <div class= "row center-block">
          <div class= "col-md-10 col-md-offset-1">
            <% @movies.each do |movie|%>
            <ul class="list">
              <li>
                <div class="card img-responsive posters">
                  <div class="card-block">
                    <% if movie.poster === "N/A" %>
                      <img src = "http://www.interlog.com/~tfs/images/posters/TFSMoviePosterUnavailable.jpg" class= "img-responsive">
                    <% else %>
                      <%= image_tag movie.poster, class:'img-responsive poster' %>
                    <% end %>
                      <h5 class="card-title"><%= movie.title %></h5>
                    <%= link_to "View", movie_path(movie), class: "btn btn-warning"%>
                  </div>
                </div>
              </li>
            </ul>

            <% end %>
            <br>
            <br>
          </div>
        </div>
      </div>
    </div>
  </div>
